# syntax=docker/dockerfile:1

FROM oven/bun:1.3

# Labels for better maintainability
LABEL maintainer="Paapeli Team"
LABEL description="Paapeli Frontend - Development Environment"
LABEL version="1.0"

WORKDIR /app

# Copy package files first for better caching
COPY package.json bun.lockb ./

# Install all dependencies (including dev dependencies for development)
RUN bun install

# Copy source code (will be overridden by volume mount in development)
COPY . .

EXPOSE 5173

# Run development server with host binding for Docker
CMD ["bun", "run", "dev", "--", "--host", "0.0.0.0"]